<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="default_theme" parent="default_theme.base"/>

	<style name="default_theme.base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary_default</item>
		<item name="colorAccent">@color/colorPrimaryLight_default</item>
		<item name="colorPrimaryDark">@color/colorPrimaryLight_default</item>
		<item name="android:textColorPrimary">@color/textColorPrimary_default</item>
		<item name="android:textColorSecondary">@color/textColorSecondary_default</item>

		<item name="colorControlNormal">@color/colorPrimary_default</item>
		<item name="colorControlHighlight">@color/colorAccent_default</item>
		<item name="colorControlActivated">@color/colorPrimary_default</item>

		<item name="android:textViewStyle">@style/default_text_view</item>
		<item name="android:editTextStyle">@style/default_edit_text</item>
		<item name="android:buttonStyle">@style/default_button</item>
		<item name="android:autoCompleteTextViewStyle">@style/default_edit_text</item>

		<item name="autoCompleteTextViewStyle">@style/default_edit_text</item>
		<item name="editTextStyle">@style/default_edit_text</item>
		<item name="buttonStyle">@style/default_button</item>

		<item name="themeName">default_theme</item>
	</style>

	<style name="gallery_theme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:background">@android:color/black</item>
	</style>

	<style name="white_theme" parent="Theme.AppCompat.Light">
		<item name="colorAccent">@android:color/white</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="default_progressbar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/default_multipage_progressbar_drawable</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/multipage_progressbar_height</item>
	</style>

	<style name="default_date_picker" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorPrimary">@color/colorPrimaryLight_default</item>
		<item name="colorAccent">@color/colorPrimaryLight_default</item>
	</style>

	<style name="default_screenlet">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingLeft">@dimen/default_screenlet_padding</item>
		<item name="android:paddingTop">@dimen/default_screenlet_padding</item>
		<item name="android:paddingRight">@dimen/default_screenlet_padding</item>
		<item name="android:paddingBottom">0dp</item>
	</style>

	<style name="default_edit_text" parent="base_default_edit_text"/>

	<style name="base_default_edit_text" parent="android:Widget.EditText">
		<item name="android:paddingTop">@dimen/default_edit_text_padding</item>
		<item name="android:paddingBottom">@dimen/default_edit_text_padding</item>
		<item name="android:paddingLeft">@dimen/default_edit_text_drawable_padding</item>
		<item name="android:paddingRight">@dimen/default_edit_text_padding</item>
		<item name="android:background">@drawable/default_edit_text_selector</item>
		<item name="android:drawablePadding">@dimen/default_edit_text_drawable_padding</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColorHint">@color/textColorSecondary_default</item>
	</style>

	<style name="default_text_view_title" parent="base_default_text_view">
		<item name="android:textSize">@dimen/default_text_view_title_font_size</item>
		<item name="android:textColor">#6b6c7e</item>
	</style>

	<style name="default_text_view_subtitle" parent="base_default_text_view">
		<item name="android:textSize">@dimen/default_text_view_subtitle_font_size</item>
		<item name="android:textColor">#6b6c7e</item>
		<item name="android:textStyle">normal</item>
		<item name="android:paddingLeft">@dimen/field_padding</item>
		<item name="android:paddingRight">@dimen/field_padding</item>
		<item name="android:paddingTop">0dp</item>
	</style>

	<style name="default_text_view" parent="base_default_text_view"/>

	<style name="base_default_text_view" parent="android:Widget.TextView">
		<item name="android:paddingBottom">@dimen/default_text_view_padding</item>
		<item name="android:paddingRight">@dimen/default_text_view_padding</item>
		<item name="android:paddingTop">@dimen/default_text_view_padding</item>
	</style>

	<style name="default_button" parent="base_default_button"/>

	<style name="base_default_button" parent="android:Widget.Button">
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/default_button_selector</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">17sp</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="default_checkbox" parent="base_default_checkbox"/>

	<style name="base_default_checkbox">
		<item name="android:padding">@dimen/default_edit_text_padding</item>
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:theme">?attr/theme</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="default_list_item">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingBottom">@dimen/default_list_padding</item>
		<item name="android:paddingLeft">@dimen/default_list_padding</item>
		<item name="android:paddingRight">@dimen/default_list_padding</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:drawableRight">@drawable/default_arrow</item>
		<item name="android:drawableEnd">@drawable/default_arrow</item>
	</style>

	<style name="default_dialog_button" parent="base_default_dialog_button"/>

	<style name="base_default_dialog_button" parent="default_text_view">
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">?colorPrimary</item>
		<item name="android:textSize">15sp</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="default_font">
		<item name="android:typeface">normal</item>
	</style>

	<style name="default_transparent_theme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowIsFloating">true</item>

		<item name="android:background">@android:color/transparent</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@android:style/Animation</item>
	</style>

	<style name="default_theme_dialog" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:textColor">?colorPrimaryDark</item>
	</style>

</resources>
