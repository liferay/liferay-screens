<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.rating.EmojisRatingView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    style="@style/default_screenlet"
    >

    <ProgressBar
        android:id="@+id/liferay_rating_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progressTint="?colorPrimary"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/liferay_rating_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <Button
            android:id="@+id/emoji_1_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ripple"
            android:tag="@string/screenlet_rating_button_tag"
            android:textColor="?colorPrimary"
            android:textSize="40sp"
            tools:text=":)"
            />

        <Button
            android:id="@+id/emoji_2_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/emoji_1_button"
            android:background="@drawable/ripple"
            android:tag="@string/screenlet_rating_button_tag"
            android:textColor="?colorPrimary"
            android:textSize="40sp"
            tools:text=":/"
            />

        <Button
            android:id="@+id/emoji_3_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/emoji_2_button"
            android:background="@drawable/ripple"
            android:tag="@string/screenlet_rating_button_tag"
            android:textColor="?colorPrimary"
            android:textSize="40sp"
            tools:text=":*"
            />

        <Button
            android:id="@+id/emoji_4_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/emoji_3_button"
            android:background="@drawable/ripple"
            android:tag="@string/screenlet_rating_button_tag"
            android:textColor="?colorPrimary"
            android:textSize="40sp"
            tools:text=":S"
            />

        <TextView
            android:id="@+id/emoji_1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/emoji_1_button"
            android:layout_alignRight="@id/emoji_1_button"
            android:layout_below="@+id/emoji_1_button"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:tag="@string/screenlet_rating_label_tag"
            android:textColor="@color/textColorPrimary_default"
            tools:text=":) 5"
            />

        <TextView
            android:id="@+id/emoji_2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/emoji_2_button"
            android:layout_alignRight="@id/emoji_2_button"
            android:layout_below="@+id/emoji_2_button"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:tag="@string/screenlet_rating_label_tag"
            android:textColor="@color/textColorPrimary_default"
            tools:text=":/ 45"
            />

        <TextView
            android:id="@+id/emoji_3_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/emoji_3_button"
            android:layout_alignRight="@id/emoji_3_button"
            android:layout_below="@+id/emoji_3_button"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:tag="@string/screenlet_rating_label_tag"
            android:textColor="@color/textColorPrimary_default"
            tools:text=":* 205"
            />

        <TextView
            android:id="@+id/emoji_4_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/emoji_4_button"
            android:layout_alignRight="@id/emoji_4_button"
            android:layout_below="@+id/emoji_4_button"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:tag="@string/screenlet_rating_label_tag"
            android:textColor="@color/textColorPrimary_default"
            tools:text=":S 469"
            />

    </RelativeLayout>

</com.liferay.mobile.screens.viewsets.defaultviews.rating.EmojisRatingView>