<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/liferay_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:padding="10dp"
        android:text="@string/origin_of_file"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liferay_dialog_title"
        android:divider="@color/textColorSecondary"
        android:orientation="vertical"
        android:showDividers="middle"
        >

        <TextView
            android:id="@+id/liferay_dialog_select_file_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_a_file"
            style="@style/default_dialog_button"
            />

        <TextView
            android:id="@+id/liferay_dialog_select_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_and_video_library"
            style="@style/default_dialog_button"
            />

        <TextView
            android:id="@+id/liferay_dialog_select_gallery_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_video_from_gallery"
            android:visibility="gone"
            style="@style/default_dialog_button"
            />

        <TextView
            android:id="@+id/liferay_dialog_take_photo_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/take_a_photo"
            style="@style/default_dialog_button"
            />

        <TextView
            android:id="@+id/liferay_dialog_take_video_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/record_a_video"
            style="@style/default_dialog_button"
            />

    </LinearLayout>

</RelativeLayout>