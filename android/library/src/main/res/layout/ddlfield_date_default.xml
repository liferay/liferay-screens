<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.ddl.form.fields.DDLFieldDateView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="10dp">

	<TextView
		android:id="@+id/liferay_ddl_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"/>

	<EditText
		android:id="@+id/liferay_ddl_edit_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableRight="@drawable/default_calendar_blue_tinted"
		android:inputType="date"
		android:padding="5dp"/>

</com.liferay.mobile.screens.viewsets.defaultviews.ddl.form.fields.DDLFieldDateView>