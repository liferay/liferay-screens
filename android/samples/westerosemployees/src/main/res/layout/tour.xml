<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray_westeros"
    android:orientation="vertical"
    >

    <androidx.viewpager.widget.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/westeros_side_margin"
        android:layout_marginRight="@dimen/westeros_side_margin"
        android:layout_weight="1"
        android:padding="@dimen/westeros_side_margin"
        >

        <androidx.viewpager.widget.PagerTabStrip
            android:id="@+id/pager_tab_strip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/background_gray_westeros"
            />
    </androidx.viewpager.widget.ViewPager>

    <Button
        android:id="@+id/tour_button"
        android:text="@string/next"
        style="@style/westeros_button"
        />

</LinearLayout>