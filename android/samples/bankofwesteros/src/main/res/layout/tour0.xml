<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/tour_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/tour_image"
        android:src="@drawable/tour_laptop"
        />

    <TextView
        android:layout_above="@+id/tour_description"
        android:text="@string/problems_with_laptop"
        android:textAllCaps="true"
        android:textStyle="bold"
        style="@style/westeros_tour_text"
        />

    <TextView
        android:id="@+id/tour_description"
        android:layout_alignParentBottom="true"
        android:text="@string/we_are_here_to_help"
        android:textColor="@color/textColorSecondary_westeros"
        style="@style/westeros_tour_text"
        />

</RelativeLayout>