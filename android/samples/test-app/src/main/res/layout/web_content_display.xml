<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:liferay="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<TextView
		android:text="@string/webview_label"
		style="@style/label"
		/>

	<com.liferay.mobile.screens.webcontent.display.WebContentDisplayScreenlet
		android:id="@+id/web_content_display_screenlet"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		liferay:articleId="@string/liferay_article_id"
		liferay:autoLoad="false"
		liferay:cachePolicy="REMOTE_FIRST"
		/>

</LinearLayout>