<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:liferay="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<TextView
		android:text="@string/ddl_form_label"
		style="@style/label"
		/>

	<com.liferay.mobile.screens.ddl.form.DDLFormScreenlet
		android:id="@+id/ddl_form_screenlet"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="0dp"
		android:paddingTop="0dp"
		liferay:autoLoad="false"
		liferay:filePrefix="jre"
		liferay:folderId="@string/folder_id"
		liferay:cachePolicy="REMOTE_FIRST"
		liferay:recordSetId="@string/liferay_recordset_id"
		liferay:repositoryId="@string/repository_id"
		liferay:structureId="@string/liferay_structure_id"
		/>

</LinearLayout>