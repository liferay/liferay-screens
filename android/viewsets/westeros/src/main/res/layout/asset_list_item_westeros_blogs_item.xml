<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.liferay.mobile.screens.dlfile.display.image.ImageDisplayScreenlet
        android:id="@+id/asset_list_document_type_image_screenlet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:autoLoad="false"
        app:imageScaleType="CENTER_CROP"
        app:layoutId="@layout/image_display_westeros_blog"
        />

    <TextView
        android:id="@+id/liferay_list_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/asset_list_document_type_image_screenlet"
        android:layout_toRightOf="@id/asset_list_document_type_image_screenlet"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/liferay_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liferay_list_date"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/asset_list_document_type_image_screenlet"
        android:layout_toRightOf="@id/asset_list_document_type_image_screenlet"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/default_arrow"
        />

</RelativeLayout>