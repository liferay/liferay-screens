<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.lexicon.ddl.form.fields.DDLFieldSelectView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="@dimen/field_padding"
	>

	<TextView
		android:id="@+id/liferay_ddl_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		style="@style/lexicon_label"
		/>

	<EditText
		android:id="@+id/liferay_ddl_edit_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableEnd="@drawable/lexicon_select"
		android:drawableRight="@drawable/lexicon_select"
		android:hint="@string/hint_select"
		android:paddingLeft="@dimen/icon_padding"
		android:paddingRight="@dimen/icon_padding"
		android:paddingEnd="@dimen/icon_padding"
		android:paddingStart="@dimen/icon_padding"
		/>

</com.liferay.mobile.screens.viewsets.lexicon.ddl.form.fields.DDLFieldSelectView>